<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GL.ELMA.QuickChat</title>
    
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap.min.css"
              asp-fallback-href="~/"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment names="Development">
        <script src="~/lib/jquery.min.js"></script>
        <script type="text/css" rel="stylesheet" src="~/lib/bootstrap.min.css"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery.min.js"
                asp-fallback-src="~/lib/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/lib/bootstrap.min.css"
                asp-fallback-src="~/lib/bootstrap.min.css"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <div id="mainChatContainer" class="container clearfix">
         <div class="navbar-collapse collapse">
                @await Html.PartialAsync("_LoginPartial")
         </div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
